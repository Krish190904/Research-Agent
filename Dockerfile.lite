FROM python:3.10-slim
WORKDIR /app

# Lightweight build for quick verification (no heavy ML packages by default)
ARG INSTALL_HEAVY=false

# Use a small requirements file to avoid huge downloads and CUDA/NVIDIA packages
COPY requirements-lite.txt ./
RUN pip install --no-cache-dir -r requirements-lite.txt

COPY . /app

ENV PYTHONPATH=/app
EXPOSE 8501

CMD ["streamlit", "run", "ui/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
